generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum bayar {
  CASH
  QRIS
}

enum kategori {
  BAJU
  GANTUNGAN
  STIKER
}

model admin {
  id       Int    @id @default(autoincrement())
  uuid     String @default("")
  nama     String @default("")
  email    String @unique @default("")
  password String @default("")
  telepon  Int    @unique @default(0)
}

model customer {
  id       Int     @id @default(autoincrement())
  uuid     String  @default("")
  nama     String  @default("")
  email    String  @unique @default("")
  password String  @default("")
  alamat   String  @default("")
  telepon  Int     @unique @default(0)
  order    order[]
}

model order {
  id          Int        @id @default(autoincrement())
  uuid        String     @default("")
  idCustomer  Int?
  customer    customer?  @relation(fields: [idCustomer], references: [id])
  createdAt   DateTime   @default(now())
  updateAt    DateTime   @updatedAt
  metodeBayar bayar      @default(QRIS)
  subOrder    subOrder[]
}

model subOrder {
  id       Int     @id @default(autoincrement())
  uuid     String  @default("")
  idOrder  Int?
  order    order?  @relation(fields: [idOrder], references: [id])
  idProduk Int?
  produk   produk? @relation(fields: [idProduk], references: [id])
}

model produk {
  id        Int        @id @default(autoincrement())
  uuid      String     @default("")
  nama      String     @default("")
  kategori  kategori   @default(BAJU)
  deskripsi String     @default("") @db.Text
  harga     Int        @default(0)
  stok      Int        @default(0)
  foto      String     @default("")
  subOrder  subOrder[]
}
